{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block main %}
    <h1>Register</h1>
    <div class="row">
        <div class="col-lg-6 mx-auto">
            {{ form_start(registrationForm) }}
                {% for field in registrationForm.children %}
                    <div class="row {% if not field.vars.valid %}has-error{% endif %}">
                        {% if field.vars.name != "_token" %}
                            <div class="col-sm-4 mb-3">
                                {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }} 
                            </div>                                                
                        {% endif %}
                        {% if field.vars.name == "agreeTerms" %}
                            <div class="col-sm-8 mb-3">                        
                                {{ form_widget(field) }}
                            </div> 
                        {% else %}
                            <div class="col-sm-8 mb-3">                        
                                {{ form_widget(field, { 'attr': { 'class': 'form-control' }}) }}
                            </div>    
                        {% endif %}                                                     
                        <div class="error">{{ form_errors(field) }}</div>           
                    </div>                           
                {% endfor %}
                <div class="row">
                    <div class="col-sm-4 mb-3">
                        <label for="none">&nbsp;</label>
                    </div>
                    <div class="col-sm-8 mb-3">                        
                        <button type="submit" class="btn btn-outline-success">Register</button>
                    </div>
                </div>                
            {{ form_end(registrationForm) }}
        </div>
    </div>    
{% endblock %}
