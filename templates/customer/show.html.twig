{% extends 'base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block main %}
    <h1>Customer</h1>

    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ customer.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ customer.name }}</td>
                </tr>
                <tr>
                    <th>FirstName</th>
                    <td>{{ customer.firstName }}</td>
                </tr>
                <tr>
                    <th>LastName</th>
                    <td>{{ customer.lastName }}</td>
                </tr>
                <tr>
                    <th>Address</th>
                    <td>{{ customer.address }}</td>
                </tr>
                <tr>
                    <th>State</th>
                    <td>{{ customer.state }}</td>
                </tr>
                <tr>
                    <th>City</th>
                    <td>{{ customer.city }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ customer.email }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ customer.password }}</td>
                </tr>
            </tbody>
        </table>
    </div>
    

    <a class="btn btn-outline-primary" href="{{ path('app_customer_index') }}">back to list</a>

    <a class="btn btn-outline-success" href="{{ path('app_customer_edit', {'id': customer.id}) }}">edit</a>

    {{ include('customer/_delete_form.html.twig') }}
{% endblock %}
