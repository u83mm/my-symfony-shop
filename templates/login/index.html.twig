{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block main %}
    <h1>Login</h1>
    <div class="col-lg-6 mx-auto">
        {% if error %}
            <div class="alert alert-danger text-center">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}
    </div>

    <form class="col-lg-6 mx-auto" action="{{ path('app_login') }}" method="post">        
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="row">
            <div class="col-sm-4 mb-3">
                <label class="form-label text-end" for="username">Email:</label>                      
            </div>
            <div class="col-sm-8 mb-3">                        
                <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 mb-3">
                <label class="form-label text-end" for="password">Password:</label>             
            </div>
            <div class="col-sm-8 mb-3">                        
                <input class="form-control" type="password" id="password" name="_password"/>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 mb-3">
                <label for="none">&nbsp;</label>           
            </div>
            <div class="col-sm-8 mb-3">                        
                <button class="btn btn-primary" type="submit">login</button>
            </div>
        </div>                

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}
                
    </form>
{% endblock %}
